@model TBT_EMPRESA

@{ ViewBag.title = "Nueva Empresa"; }
<form asp-controller="Empresa" asp-action="Guardar" method="post">
    <input type="hidden" asp-for="IDEMPRESA" name="IDEMPRESA" />
    <!--Form group agrupa elementos dentro de una forma (1 debajo de otro tipo block),
                                     el row convierte el bloque agrupado en 1 fila tipo inline-block o float left
                                     y el cols-sm.. especifica el ancho del elemento tipo witch-->
    <div class="form-group row mt-2">
        <label asp-for="NOM_EMPRESA" class="col-sm-2 col-form-label">Nombre Empresa</label>
        <div class="col-sm-10">
            <input asp-for="NOM_EMPRESA" name="NOM_EMPRESA" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="RUC_EMPRESA" class="col-sm-2 col-form-label">RUC</label>
        <div class="col-sm-10">
            <input asp-for="RUC_EMPRESA" name="RUC_EMPRESA" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="DIR_EMPRESA" class="col-sm-2 col-form-label">Dirección</label>
        <!--Usando la clase enum-->
        <div class="col-sm-10">
            <input asp-for="DIR_EMPRESA" name="DIR_EMPRESA" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </div>
    </div>
</form>
   
