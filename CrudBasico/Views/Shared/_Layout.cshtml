<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/lib/jquery/jquery.js"></script>
    <!--Añadimos la libreria de bootstrap de manera local si estamos en entorno de desarrollo-->
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <!--Si el entorno es diferente a desarrollo entonces nos carga la libreria
        de boostrap desde la siguiente url ó cdn-->
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    </environment>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="index">Listado</a>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Create">Crear</a>
                </div>
            </div>
        </nav>
        <div>
            @RenderBody()
        </div>
        <!--los scripts no sera obligatorio en toda las páginas -->
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
