@model Amigo

@{ ViewBag.title = "Nuevo amigo"; }
<form asp-controller="Home" asp-action="Create" method="post">
    <!--Form group agrupa elementos dentro de una forma (1 debajo de otro tipo block),
                                     el row convierte el bloque agrupado en 1 fila tipo inline-block o float left
                                     y el cols-sm.. especifica el ancho del elemento tipo witch-->
    <div class="form-group row mt-2">
        <label asp-for="nombres" class="col-sm-2 col-form-label">Nombres</label>
        <div class="col-sm-10">
            <input asp-for="nombres" name="nombres" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="correo" class="col-sm-2 col-form-label">Correo</label>
        <div class="col-sm-10">
            <input asp-for="correo" name="correo" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="provincia" class="col-sm-2 col-form-label">Provincia</label>
        <!--Usando la clase enum-->
        <div class="col-sm-10">
            <select asp-for="provincia" name="provincia" asp-items="Html.GetEnumSelectList<Provincia>()" class="form-control">
            </select>
        </div>
    </div>
    <div class="form-group row mt-2">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Guardar Cambios" />
        </div>
    </div>
</form>
   
